@using App.Domain
@model Department

@{
    ViewData["Title"] = "Add a new Department";
}
<style>
    body {
        background-color: #fff;
        color: #000000;
    }

    .btn-login {
        background-color: #000000;
        color: #fff;
    }
</style>

<div class="container mt-5">
    <div class="col-md-9 mx-auto">
        <div class="card">
            <div class="card-body">
                <h2 class="text-center offset-6">@ViewData["Title"]</h2>
                <div class="row">
                    <div class="col-md-7">
                        <img src="/css/Department.png" alt="Your Image" class="img-fluid rounded" style="width: 120%; height: auto;">
                    </div>
                    <div class="col-md-4 offset-0">
                        <form asp-action="NewDepartment">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                @{
                                    var faculties = ViewData["Faculties"] as IEnumerable<Faculty>;
                                }
                                @if (faculties.Count() != 0)
                                {
                                    <select asp-for="FacultyId" asp-items="@(new SelectList(faculties, "FacultyId","FacultyName"))" class="form-control">
                                        <option value="">-- Select Faculty --</option>
                                    </select>
                                }
                                else
                                {
                                    <p class="text-danger">@ViewBag.ErrorMessage</p>
                                }
                                <span asp-validation-for="FacultyId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DepartmentName" class="control-label"></label>
                                <input asp-for="DepartmentName" class="form-control" />
                                <span asp-validation-for="DepartmentName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DepartmentLogoUrl" class="control-label"></label>
                                <input asp-for="DepartmentLogoUrl" class="form-control" />
                                <span asp-validation-for="DepartmentLogoUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DepartmentDescription" class="control-label"></label>
                                <input asp-for="DepartmentDescription" class="form-control" />
                                <span asp-validation-for="DepartmentDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DepartmentHod" class="control-label"></label>
                                <input asp-for="DepartmentHod" class="form-control" />
                                <span asp-validation-for="DepartmentHod" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DepartmentEmail" class="control-label"></label>
                                <input asp-for="DepartmentEmail" class="form-control" />
                                <span asp-validation-for="DepartmentEmail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                                <a class="btn btn-outline-secondary" asp-action="Index"> Show all </a>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#DepartmentLogoUrl").on("change", function () {
                // Assuming you want to set the preview image's source
                var imageUrl = $(this).val();
                $("#DepartmentLogoUrlPreview").attr("src", imageUrl);
            });
        });
    </script>
}
