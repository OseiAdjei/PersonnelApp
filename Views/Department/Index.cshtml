@using App.Domain
@model IEnumerable<Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        @if (Model != null && Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().DepartmentLogoUrl)</th>
                        <th>@Html.DisplayNameFor(model => model.First().DepartmentName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().DepartmentHod)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td class="align-middle">
                                @if (!string.IsNullOrEmpty(item.DepartmentLogoUrl))
                                {
                                    <img class="rounded-circle" src="@item.DepartmentLogoUrl" alt="@item.DepartmentName" style="max-width: 150px" />
                                }
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.DepartmentName)
                            </td>
                            <td class="align-middle">
                                @if (!string.IsNullOrEmpty(item.DepartmentHod))
                                {
                                    @Html.DisplayFor(modelItem => item.DepartmentHod)
                                }
                            </td>

                            <td class="align-middle">
                                <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit </a>
                                <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details </a>
                                <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Trash </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Departments available.</p>
        }
    </div>
</div>
<div style="position: fixed; left: 130px; bottom: 120px;" class="text-white">
    <a asp-controller="Department" asp-action="NewDepartment" class="btn btn-success">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
        </svg> Add New
    </a>
</div>
