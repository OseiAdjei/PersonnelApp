@using App.Domain
@model Faculty

<div class="row-text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.FacultyName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group">
                    <label asp-for="FacultyLogoUrl" class="control-label"></label>
                    <img id="FacultyLogoUrlPreview" src="@Model.FacultyLogoUrl" class="form-control" style="max-width: 100%;" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="College.CollegeName" class="control-label"></label>
                    <input asp-for="College.CollegeName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="FacultyName" class="control-label"></label>
                    <input asp-for="FacultyName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="FacultyDescription" class="control-label"></label>
                    <textarea asp-for="FacultyDescription" class="form-control" readonly></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="FacultyDean" class="control-label"></label>
                    <input asp-for="FacultyDean" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="FacultyEmail" class="control-label"></label>
                    <input asp-for="FacultyEmail" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.FacultyId"></a>
                    <a class="btn btn-outline-secondary" asp-action="Index"> Show all </a>
                </div>
            </div>
        </div>
    </div>
</div>
