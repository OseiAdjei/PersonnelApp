@using App.Domain
@model IEnumerable<Faculty>

@{
    ViewData["Title"] = "Faculties";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        @if (Model != null && Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().FacultyLogoUrl)</th>
                        <th>@Html.DisplayNameFor(model => model.First().FacultyName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().FacultyDean)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td class="align-middle">
                                @if (!string.IsNullOrEmpty(item.FacultyLogoUrl))
                                {
                                    <img class="rounded-circle" src="@item.FacultyLogoUrl" alt="@item.FacultyName" style="max-width: 150px" />
                                }
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.FacultyName)
                            </td>
                            <td class="align-middle">
                                @if (!string.IsNullOrEmpty(item.FacultyDean))
                                {
                                    @Html.DisplayFor(modelItem => item.FacultyDean)
                                }
                            </td>

                            <td class="align-middle">
                                <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit </a>
                                <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details </a>
                                <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Trash </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Faculties available.</p>
        }
    </div>
</div>
<div style="position: fixed; left: 130px; bottom: 120px;" class="text-white">
    <a asp-controller="Faculty" asp-action="NewFaculty" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New</a>
</div>
