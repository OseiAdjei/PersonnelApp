@using App.Domain
@model IEnumerable<Faculty>

@{
    ViewData["Title"] = "Faculties";
}

<div class="container mt-3">
    <div class="col-md-12 mx-auto">
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12 offset-md-0">
        @if (Model != null && Model.Any())
        {
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model => model.First().FacultyLogoUrl)</th>
                        <th>@Html.DisplayNameFor(model => model.First().FacultyName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().FacultyEmail)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                @if (!string.IsNullOrEmpty(item.FacultyLogoUrl))
                                {
                                    <img class="rounded-circle" src="@item.FacultyLogoUrl" alt="@item.FacultyName" style="max-width: 80px" />
                                }
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.FacultyName)
                            </td>
                           
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.FacultyEmail)
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-action="Edit_Faculty" asp-route-id="@item.FacultyId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z" />
                                    </svg> Edit
                                </a>
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.FacultyId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" fill="currentColor" class="bi bi-eyeglasses" viewBox="0 0 16 16">
                                        <path d="M4 6a2 2 0 1 1 0 4 2 2 0 0 1 0-4m2.625.547a3 3 0 0 0-5.584.953H.5a.5.5 0 0 0 0 1h.541A3 3 0 0 0 7 8a1 1 0 0 1 2 0 3 3 0 0 0 5.959.5h.541a.5.5 0 0 0 0-1h-.541a3 3 0 0 0-5.584-.953A2 2 0 0 0 8 6c-.532 0-1.016.208-1.375.547M14 8a2 2 0 1 1-4 0 2 2 0 0 1 4 0" />
                                    </svg> Details
                                </a>
                                <a class="btn btn-danger text-white">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                    </svg> Trash
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No faculties available.</p>
        }
    </div>
    </div>
    </div>
    </div>
    </div>
</div>
<div style="position: fixed; left: 130px; bottom: 120px;" class="text-white">
    <a asp-controller="Faculty" asp-action="NewFaculty" class="btn btn-success">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
        </svg> Add New
    </a>
</div>
